<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="locationTrackerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="title" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/locationTracksColor</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/titleMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/titleMarginBottom</item>
        <item name="android:layout_marginStart">@dimen/titleMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/titleMarginEnd</item>
    </style>

    <style name="notice" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/noticeText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/noticeTextSize</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">@dimen/noticeMarginBottom</item>
        <item name="android:layout_marginStart">@dimen/noticeMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/noticeMarginEnd</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="footerButton" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>

        <item name="android:layout_marginBottom">@dimen/footerButtonMarginBottom</item>
        <item name="android:layout_marginStart">@dimen/footerButtonMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/footerButtonMarginEnd</item>
        <item name="android:textColor">@color/locationTracksColor</item>
        <item name="android:background">@color/buttonColor</item>
    </style>

    <style name="settingsButton" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@android:drawable/ic_menu_manage</item>
        <item name="android:layout_margin">@dimen/imageButtonMargin</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="listTrack" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginStart">@dimen/layoutContainerMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/layoutContainerMarginEnd</item>
    </style>

    <style name="fieldLabel" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/locationTracksColor</item>
        <item name="android:textSize">@dimen/fieldTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/fieldMarginTop</item>
        <item name="android:layout_marginEnd">@dimen/editTextMarginEnd</item>
    </style>

    <style name="editText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginTop">@dimen/editTextMarginTop</item>
        <item name="android:layout_marginEnd">@dimen/editTextMarginEnd</item>
    </style>

    <style name="subtitle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/noticeText</item>
        <item name="android:textSize">@dimen/subtitleTextSize</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">@dimen/subtitleMarginBottom</item>
        <item name="android:layout_marginStart">@dimen/subtitleMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/subtitleMarginEnd</item>
    </style>

    <style name="button" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/locationTracksColor</item>
        <item name="android:background">@color/buttonColor</item>
        <item name="android:layout_marginTop">@dimen/titleMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/titleMarginBottom</item>
        <item name="android:layout_marginStart">@dimen/titleMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/titleMarginEnd</item>
    </style>

    <style name="cities">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/citiesHeight</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="itemInList" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/locationTracksColor</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/listItemTextSize</item>
    </style>

    <style name="itemInListNormal" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/locationTracksColor</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/listItemTextSizeNormal</item>
    </style>

    <style name="noOfLocation" parent="@android:style/TextAppearance">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/locationTracksColor</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/listLocationTextSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>

    </style>

</resources>
